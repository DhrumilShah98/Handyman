<% include ../partials/header %>

<meta name="description"
	content="Handyman: Vendor Reset Password: Vendor reset password page. Enter new password and confirm your new password.">
<title>Handyman: Vendor Reset Password</title>
<link rel="stylesheet" href="/stylesheets/form.css" />

<% include ../partials/navbar %>

<div class="container form-content">
	<h1 class="text-center">Reset Password</h1>
	<form action="/vendor/reset/<%= token %>" method="POST">
		<div class="form-group">
			<label for="password">New Password</label>
			<input type="password" name="password" value="" minlength="8" maxlength="30" placeholder="New password"
				autofocus="autofocus" class="form-control" />
		</div>
		<div class="form-group">
			<label for="confirm">Confirm Password</label>
			<input type="password" name="confirm" value="" minlength="8" maxlength="30" placeholder="Confirm password"
				class="form-control" />
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">Update Password!</button>
		</div>
	</form>
</div>

<% include ../partials/footer %>